<% include ./partials/header.ejs %>
<div class="w-full bg-zinc-900 py-4 px-4 flex items-center justify-between">
    <img class="w-1/4" src="/images/logo.png" alt="">
    <div class="icons -mt-2 flex gap-5 items-center">
        <i class="text-[1.4rem] ri-heart-3-line text-white"></i>
        <i class="text-[1.4rem] ri-messenger-line text-white"></i>
    </div>
</div>
<div class="w-[100vw] h-[90vh] bg-zinc-900 grid grid-cols-2 py-5 px-6 gap-5 overflow-y-auto ">

    <% if(savedPostDets.length > 0){ %>
        <% savedPostDets.reverse().forEach(function(t){ %>
            
            
            <div class="saved w-[40vw] h-[28vh] rounded-[15px] bg-slate-500 flex-shrink-0 overflow-hidden border-[0.5px] border-white">

                <div class="w-full h-[6vh] bg-zinc-800 p-2 flex items-center justify-start gap-1">
                    
                    <div class="w-9 h-9 rounded-full bg-slate-300 overflow-hidden ">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= t.user.profileImg %>" alt="">
                    </div>
                    <h3 class="text-white"><%= t.user.username %></h3>

                </div>

                <div class="w-full h-full bg-cyan-300 border-t-[1.5px] border-white">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= t.picture %>" alt="">
                </div>

            </div>

        <% }) %>
    <% }else{ %>
        <div class="w-[90vw] h-screen flex item-center justify-center">
            <h1 class="text-white text-center font-bold text-[8vw]">No Saved Posts</h1>
        </div>
    <% } %>
</div>




<% include ./partials/footer.ejs %>