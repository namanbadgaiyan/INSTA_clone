<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen py-5 text-white bg-zinc-900">
      <div class="flex items-center justify-between px-4 nav">
        <h3 class="text-lg"><%= userprofile.username %></h3>
        <div class="flex gap-5 icons">
          <a href="/upload"><i class="text-[1.4rem] ri-add-box-line"></i></a>
          <i class="text-[1.4rem] ri-menu-line"></i>
        </div>
      </div>
      <div class="flex justify-between items-center pl-6 pr-[12vw] mt-8">
        <div class="w-[19vw] h-[19vw] bg-sky-100 rounded-full overflow-hidden">
          <img class="object-cover w-full h-full" src="/images/uploads/<%= userprofile.profileImg %>" alt="">
        </div>
        <div class="flex items-center justify-between gap-5 stats">
          <div class="flex flex-col items-center justify-center">
            <h3 class="text-lg"><%= userprofile.posts.length %></h3>
            <h4>Posts</h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3 class="text-lg"><%= userprofile.followers.length %></h3>
            <h4>Followers</h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3 class="text-lg"><%= userprofile.following.length %></h3>
            <h4>Following</h4>
          </div>
        </div>
      </div>
      <div class="px-6 mt-5 dets">
        <h3 class="mb-1 text-lg"><%= userprofile.name %></h3>
        <p class="text-xs tracking-tight opacity-50"><%= userprofile.bio ?? "You have not set anything yet, (click edit profile to set)" %></p>
      </div>
      <div class="flex items-center gap-1 px-6 mt-5 justify-evenly">
        <% if(user.following.indexOf(userprofile._id) === -1){ %>
            <a class="px-6 py-2 text-xs bg-blue-500 rounded-md" href="/follow/<%= userprofile._id %>">Follow</a>
        <% } else { %>
            <a class="px-6 py-2 text-xs bg-blue-500 rounded-md" href="/follow/<%= userprofile._id %>">Following</a>
        <% } %>
        <a class="px-6 py-2 text-xs rounded-md bg-zinc-800" href="/message/<%= userprofile._id %>">Message</a>
        <a class="px-6 py-2 text-xs rounded-md bg-zinc-800" href="#">Contact</a>
      </div>
      <div class="flex flex-wrap w-full gap-1 py-2 mt-5 posts">
        <% if(userprofile.posts.length>0){ %>
          <% userprofile.posts.reverse().forEach(function(post){ %>
            <div class="post w-[32.5%] h-32 bg-sky-100">
              <img class="object-cover w-full h-full" src="/images/uploads/<%= post.picture %>" alt="">
            </div>
          <% }) %>
        <% } else { %>
          <div class="w-full flex justify-center items-center min-h-[20vh]">
            <small class="opacity-50">no posts yet.</small>
          </div>
        <% } %>
      </div>
  </div>
<% include ./partials/footer.ejs %>